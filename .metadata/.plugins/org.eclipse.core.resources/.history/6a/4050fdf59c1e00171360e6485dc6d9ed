package master.mdsd.validation

import master.mdsd.game.GamePackage

/**
 * This class contains custom validation rules. 
 *
 * See https://www.eclipse.org/Xtext/documentation/303_runtime_concepts.html#validation
 */
class GameValidator extends AbstractGameValidator {
	
@Check
    def checkDynamicEntitiesTitleIsNotEmpty(master.mdsd.game.Character character){
        if (character.getCharId()== null
        ){
            error("The character has to have a type. ex: Character [Type] hostile", GamePackage.Literals.CHARACTER__NAME, "invalidType");
        }
        if (character.getName() == null){
            error("The character has to have an identifier. ex: Character Neutral [identifier]", GamePackage.Literals.CHARACTERNAME, "invalidNAME");
        }
    }
	
}
